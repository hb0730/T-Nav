{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "schedule:weekly",
    "group:allNonMajor"
  ],
  "labels": ["renovate"],
  "rangeStrategy": "bump",
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "digest"],
      "name": "Auto merge",
      "autoMerge": true
    },
    {
      "depTypeList": ["peerDependencies"],
      "enabled": false
    }
  ]
}
